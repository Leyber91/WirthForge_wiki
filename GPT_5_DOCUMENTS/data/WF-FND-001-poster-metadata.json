{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wirthforge.ai/schemas/poster-metadata.json",
  "title": "WIRTHFORGE Poster Metadata Schema",
  "description": "Comprehensive metadata for WIRTHFORGE poster assets including design specifications, accessibility requirements, and distribution formats",
  "type": "object",
  "required": ["id", "title", "version", "design", "accessibility", "formats", "distribution"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^WF-FND-001-poster$",
      "description": "Unique identifier for the poster asset"
    },
    "title": {
      "type": "string",
      "const": "WIRTHFORGE Vision & Principles Poster",
      "description": "Official poster title"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version following SemVer 2.0.0"
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 creation timestamp"
    },
    "updated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 last update timestamp"
    },
    "design": {
      "type": "object",
      "required": ["dimensions", "colorPalette", "typography", "layout"],
      "properties": {
        "dimensions": {
          "type": "object",
          "required": ["a4", "letter", "digital"],
          "properties": {
            "a4": {
              "type": "object",
              "properties": {
                "width": {"type": "string", "const": "210mm"},
                "height": {"type": "string", "const": "297mm"},
                "dpi": {"type": "integer", "const": 300}
              }
            },
            "letter": {
              "type": "object",
              "properties": {
                "width": {"type": "string", "const": "8.5in"},
                "height": {"type": "string", "const": "11in"},
                "dpi": {"type": "integer", "const": 300}
              }
            },
            "digital": {
              "type": "object",
              "properties": {
                "width": {"type": "integer", "const": 1200},
                "height": {"type": "integer", "const": 630},
                "dpi": {"type": "integer", "const": 72}
              }
            }
          }
        },
        "colorPalette": {
          "type": "object",
          "required": ["primary", "secondary", "accent", "background", "text"],
          "properties": {
            "primary": {"type": "string", "const": "#f59e0b"},
            "secondary": {"type": "string", "const": "#3b82f6"},
            "accent": {"type": "string", "const": "#a855f7"},
            "background": {"type": "string", "const": "#0f172a"},
            "text": {
              "type": "object",
              "properties": {
                "primary": {"type": "string", "const": "#ffffff"},
                "secondary": {"type": "string", "const": "#f1f5f9"}
              }
            }
          }
        },
        "typography": {
          "type": "object",
          "required": ["primary", "secondary", "minSizes"],
          "properties": {
            "primary": {"type": "string", "const": "Inter"},
            "secondary": {"type": "string", "const": "Arial"},
            "minSizes": {
              "type": "object",
              "properties": {
                "body": {"type": "string", "const": "12pt"},
                "headline": {"type": "string", "const": "18pt"}
              }
            }
          }
        },
        "layout": {
          "type": "object",
          "required": ["margins", "sections", "grid"],
          "properties": {
            "margins": {
              "type": "object",
              "properties": {
                "minimum": {"type": "string", "const": "15mm"},
                "safe": {"type": "string", "const": "20mm"}
              }
            },
            "sections": {
              "type": "object",
              "properties": {
                "header": {"type": "string", "const": "top-third"},
                "middle": {"type": "string", "const": "middle-third"},
                "footer": {"type": "string", "const": "bottom-third"}
              }
            },
            "grid": {"type": "string", "const": "8px"}
          }
        }
      }
    },
    "accessibility": {
      "type": "object",
      "required": ["wcag", "contrast", "altText", "colorIndependence"],
      "properties": {
        "wcag": {
          "type": "string",
          "const": "2.2 AA",
          "description": "WCAG compliance level"
        },
        "contrast": {
          "type": "object",
          "required": ["normal", "large"],
          "properties": {
            "normal": {"type": "number", "minimum": 4.5},
            "large": {"type": "number", "minimum": 3.0}
          }
        },
        "altText": {
          "type": "string",
          "description": "Comprehensive alt text for screen readers"
        },
        "colorIndependence": {
          "type": "boolean",
          "const": true,
          "description": "Information conveyed through shape/position, not just color"
        }
      }
    },
    "formats": {
      "type": "object",
      "required": ["source", "print", "web", "social"],
      "properties": {
        "source": {
          "type": "array",
          "items": {"type": "string", "enum": ["ai", "svg", "psd"]}
        },
        "print": {
          "type": "array",
          "items": {"type": "string", "enum": ["pdf-x1a", "eps", "tiff"]}
        },
        "web": {
          "type": "array",
          "items": {"type": "string", "enum": ["png", "jpg", "webp"]}
        },
        "social": {
          "type": "array",
          "items": {"type": "string", "enum": ["og-image", "twitter-card", "linkedin-post"]}
        }
      }
    },
    "distribution": {
      "type": "object",
      "required": ["channels", "usage", "licensing"],
      "properties": {
        "channels": {
          "type": "array",
          "items": {"type": "string", "enum": ["print", "digital", "social", "email", "presentation"]}
        },
        "usage": {
          "type": "object",
          "properties": {
            "conferences": {"type": "boolean"},
            "websites": {"type": "boolean"},
            "socialMedia": {"type": "boolean"},
            "emailSignatures": {"type": "boolean"}
          }
        },
        "licensing": {
          "type": "string",
          "enum": ["proprietary", "cc-by", "cc-by-sa", "mit"],
          "description": "License for asset usage"
        }
      }
    },
    "validation": {
      "type": "object",
      "required": ["checklist", "approvals"],
      "properties": {
        "checklist": {
          "type": "object",
          "properties": {
            "spellCheck": {"type": "boolean"},
            "brandConsistency": {"type": "boolean"},
            "legalCompliance": {"type": "boolean"},
            "accessibilityAudit": {"type": "boolean"},
            "technicalSpecs": {"type": "boolean"}
          }
        },
        "approvals": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "role": {"type": "string"},
              "name": {"type": "string"},
              "date": {"type": "string", "format": "date"},
              "approved": {"type": "boolean"}
            }
          }
        }
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "recognition": {"type": "string", "description": "Brand recognition target"},
        "comprehension": {"type": "string", "description": "Concept understanding target"},
        "engagement": {"type": "string", "description": "User engagement target"},
        "accessibility": {"type": "string", "description": "Accessibility compliance target"}
      }
    }
  }
}
