          "type": "object",
          "properties": {
            "tight": {"type": "number", "const": 1.25},
            "snug": {"type": "number", "const": 1.375},
            "normal": {"type": "number", "const": 1.5},
            "relaxed": {"type": "number", "const": 1.625},
            "loose": {"type": "number", "const": 2}
          }
        },
        "letterSpacing": {
          "type": "object",
          "properties": {
            "tighter": {"type": "string", "const": "-0.05em"},
            "tight": {"type": "string", "const": "-0.025em"},
            "normal": {"type": "string", "const": "0em"},
            "wide": {"type": "string", "const": "0.025em"},
            "wider": {"type": "string", "const": "0.05em"}
          }
        }
      }
    },
    "spacing": {
      "type": "object",
      "required": ["scale", "components"],
      "properties": {
        "scale": {
          "type": "object",
          "properties": {
            "0": {"type": "string", "const": "0"},
            "1": {"type": "string", "const": "0.25rem"},
            "2": {"type": "string", "const": "0.5rem"},
            "3": {"type": "string", "const": "0.75rem"},
            "4": {"type": "string", "const": "1rem"},
            "5": {"type": "string", "const": "1.25rem"},
            "6": {"type": "string", "const": "1.5rem"},
            "8": {"type": "string", "const": "2rem"},
            "10": {"type": "string", "const": "2.5rem"},
            "12": {"type": "string", "const": "3rem"},
            "16": {"type": "string", "const": "4rem"},
            "20": {"type": "string", "const": "5rem"}
          }
        },
        "components": {
          "type": "object",
          "properties": {
            "button": {
              "type": "object",
              "properties": {
                "padding": {"type": "string", "const": "0.75rem 1.5rem"},
                "margin": {"type": "string", "const": "0.5rem"}
              }
            },
            "card": {
              "type": "object",
              "properties": {
                "padding": {"type": "string", "const": "1.5rem"},
                "margin": {"type": "string", "const": "1rem"}
              }
            },
            "section": {
              "type": "object",
              "properties": {
                "padding": {"type": "string", "const": "3rem 0"},
                "margin": {"type": "string", "const": "2rem 0"}
              }
            }
          }
        }
      }
    },
    "animation": {
      "type": "object",
      "required": ["durations", "easings", "energy"],
      "properties": {
        "durations": {
          "type": "object",
          "properties": {
            "instant": {"type": "string", "const": "0ms"},
            "fast": {"type": "string", "const": "150ms"},
            "normal": {"type": "string", "const": "300ms"},
            "slow": {"type": "string", "const": "500ms"},
            "energy": {"type": "string", "const": "16.67ms"}
          }
        },
        "easings": {
          "type": "object",
          "properties": {
            "linear": {"type": "string", "const": "linear"},
            "easeIn": {"type": "string", "const": "cubic-bezier(0.4, 0, 1, 1)"},
            "easeOut": {"type": "string", "const": "cubic-bezier(0, 0, 0.2, 1)"},
            "easeInOut": {"type": "string", "const": "cubic-bezier(0.4, 0, 0.2, 1)"},
            "energy": {"type": "string", "const": "cubic-bezier(0.25, 0.46, 0.45, 0.94)"}
          }
        },
        "energy": {
          "type": "object",
          "properties": {
            "particle": {
              "type": "object",
              "properties": {
                "speed": {"type": "string", "const": "2s"},
                "delay": {"type": "string", "const": "0-500ms"},
                "direction": {"type": "string", "const": "alternate"}
              }
            },
            "flow": {
              "type": "object",
              "properties": {
                "speed": {"type": "string", "const": "3s"},
                "delay": {"type": "string", "const": "0ms"},
                "direction": {"type": "string", "const": "normal"}
              }
            },
            "pulse": {
              "type": "object",
              "properties": {
                "speed": {"type": "string", "const": "1.5s"},
                "delay": {"type": "string", "const": "0ms"},
                "direction": {"type": "string", "const": "alternate"}
              }
            }
          }
        }
      }
    },
    "effects": {
      "type": "object",
      "required": ["shadows", "borders", "gradients"],
      "properties": {
        "shadows": {
          "type": "object",
          "properties": {
            "sm": {"type": "string", "const": "0 1px 2px 0 rgba(0, 0, 0, 0.05)"},
            "md": {"type": "string", "const": "0 4px 6px -1px rgba(0, 0, 0, 0.1)"},
            "lg": {"type": "string", "const": "0 10px 15px -3px rgba(0, 0, 0, 0.1)"},
            "xl": {"type": "string", "const": "0 20px 25px -5px rgba(0, 0, 0, 0.1)"},
            "energy": {"type": "string", "const": "0 0 20px rgba(245, 158, 11, 0.6)"}
          }
        },
        "borders": {
          "type": "object",
          "properties": {
            "width": {
              "type": "object",
              "properties": {
                "thin": {"type": "string", "const": "1px"},
                "medium": {"type": "string", "const": "2px"},
                "thick": {"type": "string", "const": "4px"}
              }
            },
            "radius": {
              "type": "object",
              "properties": {
                "none": {"type": "string", "const": "0"},
                "sm": {"type": "string", "const": "0.125rem"},
                "md": {"type": "string", "const": "0.375rem"},
                "lg": {"type": "string", "const": "0.5rem"},
                "xl": {"type": "string", "const": "0.75rem"},
                "full": {"type": "string", "const": "9999px"}
              }
            }
          }
        },
        "gradients": {
          "type": "object",
          "properties": {
            "energy": {
              "type": "object",
              "properties": {
                "forge": {"type": "string", "const": "linear-gradient(45deg, #f59e0b, #d97706)"},
                "scholar": {"type": "string", "const": "linear-gradient(45deg, #3b82f6, #2563eb)"},
                "sage": {"type": "string", "const": "linear-gradient(45deg, #a855f7, #9333ea)"},
                "mixed": {"type": "string", "const": "linear-gradient(90deg, #f59e0b, #3b82f6, #a855f7)"}
              }
            },
            "background": {
              "type": "object",
              "properties": {
                "primary": {"type": "string", "const": "linear-gradient(135deg, #1e293b, #0f172a)"},
                "secondary": {"type": "string", "const": "radial-gradient(circle, #334155, #1e293b)"}
              }
            }
          }
