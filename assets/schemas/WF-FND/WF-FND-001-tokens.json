    "accessibility": {
      "type": "object",
      "properties": {
        "focusRing": {
          "type": "object",
          "properties": {
            "width": {"type": "string", "const": "2px"},
            "color": {"type": "string", "const": "#3b82f6"},
            "offset": {"type": "string", "const": "2px"}
          }
        },
        "clickTarget": {
          "type": "object",
          "properties": {
            "minSize": {"type": "string", "const": "44px"}
