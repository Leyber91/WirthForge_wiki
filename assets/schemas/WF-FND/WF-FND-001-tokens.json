{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wirthforge.ai/schemas/ui-tokens.json",
  "title": "WF-FND-001 UI Design Tokens",
  "description": "Design system tokens for WIRTHFORGE Foundation document visual elements and brand consistency",
  "type": "object",
  "required": ["colors", "typography", "spacing", "animation", "effects"],
  "properties": {
    "colors": {
      "type": "object",
      "required": ["primary", "secondary", "semantic", "neutral", "energy"],
      "properties": {
        "primary": {
          "type": "object",
          "properties": {
            "forge": {
              "type": "object",
              "properties": {
                "50": {"type": "string", "const": "#fef3c7"},
                "100": {"type": "string", "const": "#fde68a"},
                "200": {"type": "string", "const": "#fcd34d"},
                "300": {"type": "string", "const": "#fbbf24"},
                "400": {"type": "string", "const": "#f59e0b"},
                "500": {"type": "string", "const": "#d97706"},
                "600": {"type": "string", "const": "#b45309"},
                "700": {"type": "string", "const": "#92400e"},
                "800": {"type": "string", "const": "#78350f"},
                "900": {"type": "string", "const": "#451a03"}
              }
            },
            "scholar": {
              "type": "object",
              "properties": {
                "50": {"type": "string", "const": "#eff6ff"},
                "100": {"type": "string", "const": "#dbeafe"},
                "200": {"type": "string", "const": "#bfdbfe"},
                "300": {"type": "string", "const": "#93c5fd"},
                "400": {"type": "string", "const": "#60a5fa"},
                "500": {"type": "string", "const": "#3b82f6"},
                "600": {"type": "string", "const": "#2563eb"},
                "700": {"type": "string", "const": "#1d4ed8"},
                "800": {"type": "string", "const": "#1e40af"},
                "900": {"type": "string", "const": "#1e3a8a"}
              }
            },
            "sage": {
              "type": "object",
              "properties": {
                "50": {"type": "string", "const": "#faf5ff"},
                "100": {"type": "string", "const": "#f3e8ff"},
                "200": {"type": "string", "const": "#e9d5ff"},
                "300": {"type": "string", "const": "#d8b4fe"},
                "400": {"type": "string", "const": "#c084fc"},
                "500": {"type": "string", "const": "#a855f7"},
                "600": {"type": "string", "const": "#9333ea"},
                "700": {"type": "string", "const": "#7c3aed"},
                "800": {"type": "string", "const": "#6d28d9"},
                "900": {"type": "string", "const": "#581c87"}
              }
            }
          }
        },
        "secondary": {
          "type": "object",
          "properties": {
            "success": {"type": "string", "const": "#10b981"},
            "warning": {"type": "string", "const": "#f59e0b"},
            "error": {"type": "string", "const": "#ef4444"},
            "info": {"type": "string", "const": "#3b82f6"}
          }
        },
        "semantic": {
          "type": "object",
          "properties": {
            "background": {
              "type": "object",
              "properties": {
                "primary": {"type": "string", "const": "#0f172a"},
                "secondary": {"type": "string", "const": "#1e293b"},
                "tertiary": {"type": "string", "const": "#334155"}
              }
            },
            "text": {
              "type": "object",
              "properties": {
                "primary": {"type": "string", "const": "#ffffff"},
                "secondary": {"type": "string", "const": "#f1f5f9"},
                "tertiary": {"type": "string", "const": "#cbd5e1"},
                "muted": {"type": "string", "const": "#64748b"}
              }
            },
            "border": {
              "type": "object",
              "properties": {
                "primary": {"type": "string", "const": "#334155"},
                "secondary": {"type": "string", "const": "#475569"},
                "accent": {"type": "string", "const": "#64748b"}
              }
            }
          }
        },
        "neutral": {
          "type": "object",
          "properties": {
            "50": {"type": "string", "const": "#f8fafc"},
            "100": {"type": "string", "const": "#f1f5f9"},
            "200": {"type": "string", "const": "#e2e8f0"},
            "300": {"type": "string", "const": "#cbd5e1"},
            "400": {"type": "string", "const": "#94a3b8"},
            "500": {"type": "string", "const": "#64748b"},
            "600": {"type": "string", "const": "#475569"},
            "700": {"type": "string", "const": "#334155"},
            "800": {"type": "string", "const": "#1e293b"},
            "900": {"type": "string", "const": "#0f172a"}
          }
        },
        "energy": {
          "type": "object",
          "properties": {
            "particle": {
              "type": "object",
              "properties": {
                "forge": {"type": "string", "const": "#f59e0b"},
                "scholar": {"type": "string", "const": "#3b82f6"},
                "sage": {"type": "string", "const": "#a855f7"},
                "neutral": {"type": "string", "const": "#10b981"}
              }
            },
            "flow": {
              "type": "object",
              "properties": {
                "primary": {"type": "string", "const": "#f59e0b"},
                "secondary": {"type": "string", "const": "#3b82f6"},
                "accent": {"type": "string", "const": "#a855f7"}
              }
            },
            "glow": {
              "type": "object",
              "properties": {
                "intensity": {"type": "number", "const": 0.6},
                "radius": {"type": "string", "const": "3px"},
                "spread": {"type": "string", "const": "1px"}
              }
            }
          }
        }
      }
    },
    "typography": {
      "type": "object",
      "required": ["fontFamilies", "fontSizes", "fontWeights", "lineHeights", "letterSpacing"],
      "properties": {
        "fontFamilies": {
          "type": "object",
          "properties": {
            "primary": {"type": "string", "const": "Inter, system-ui, sans-serif"},
            "secondary": {"type": "string", "const": "Arial, Helvetica, sans-serif"},
            "monospace": {"type": "string", "const": "Fira Code, Consolas, monospace"}
          }
        },
        "fontSizes": {
          "type": "object",
          "properties": {
            "xs": {"type": "string", "const": "0.75rem"},
            "sm": {"type": "string", "const": "0.875rem"},
            "base": {"type": "string", "const": "1rem"},
            "lg": {"type": "string", "const": "1.125rem"},
            "xl": {"type": "string", "const": "1.25rem"},
            "2xl": {"type": "string", "const": "1.5rem"},
            "3xl": {"type": "string", "const": "1.875rem"},
            "4xl": {"type": "string", "const": "2.25rem"},
            "5xl": {"type": "string", "const": "3rem"}
          }
        },
        "fontWeights": {
          "type": "object",
          "properties": {
            "light": {"type": "integer", "const": 300},
            "normal": {"type": "integer", "const": 400},
            "medium": {"type": "integer", "const": 500},
            "semibold": {"type": "integer", "const": 600},
            "bold": {"type": "integer", "const": 700},
            "extrabold": {"type": "integer", "const": 800}
